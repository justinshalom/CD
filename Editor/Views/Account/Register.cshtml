@model Editor.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<div class="col-xs-50  ">
<div class="col-xs-10 col-xs-offset-20">
<div class="box box-info well">
    <section class="box-header">

        <h4>Create a new account.</h4>
    </section>
        <section id="loginForm" class="form box-body  ">


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    
    <div class="col-xs-50 formrows">
   
    <div class="form-group  label-floating">
        @Html.LabelFor(m => m.Email, new { @class = " control-label" })
        
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email,"",new { @class = "text-danger" })
    </div>
    <div class="form-group  label-floating">
        @Html.LabelFor(m => m.Password, new { @class = " control-label" })
        
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password,"",new { @class = "text-danger" })
    </div>
    <div class="form-group  label-floating">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = " control-label" })
        
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword,"",new { @class = "text-danger" })
    </div>
    <div class="form-group  label-floating">
        
            <button type="submit" class="btn-raised btn btn-default" >Register</button>
        <a class="btn-raised btn btn-info" href="@Url.Action("Login")">Log In</a>
    </div>
        </div>
}
</section>
    </div>
    </div>
    </div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
